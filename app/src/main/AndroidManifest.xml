<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HortechIA"
        tools:targetApi="31">

        <!-- SplashActivity - PRIMERA PANTALLA (LAUNCHER) -->
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.HortechIA.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- OnboardingActivity - Tutorial de bienvenida -->
        <activity
            android:name=".ui.OnboardingActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- LoginActivity - Autenticación -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- RegisterActivity - Registro de usuarios -->
        <activity
            android:name=".ui.RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- ForgotPasswordActivity - Recuperación de contraseña -->
        <activity
            android:name=".ui.ForgotPasswordActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- DashboardActivity - Pantalla principal -->
        <activity
            android:name=".ui.DashboardActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ControlManualActivity - Control manual de riego -->
        <activity
            android:name=".ui.ControlManualActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.DashboardActivity" />

        <activity
            android:name=".HistorialActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- MainActivity - Pantalla temporal -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

    </application>

</manifest>